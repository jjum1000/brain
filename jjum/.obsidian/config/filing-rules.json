{
  "version": "1.0",
  "last_updated": null,
  "rules": [
    {
      "id": "rule-001",
      "name": "Git Commits",
      "priority": 1,
      "conditions": {
        "source": "git-commit"
      },
      "destination": "1_Projects/Code-Changes",
      "enabled": true
    },
    {
      "id": "rule-002",
      "name": "Web Articles - React",
      "priority": 2,
      "conditions": {
        "tags": ["react", "javascript"],
        "any": true
      },
      "destination": "3_Resources/React",
      "enabled": true
    },
    {
      "id": "rule-003",
      "name": "Web Articles - Programming",
      "priority": 3,
      "conditions": {
        "tags": ["programming", "coding", "development"],
        "any": true
      },
      "destination": "3_Resources/Programming",
      "enabled": true
    },
    {
      "id": "rule-004",
      "name": "Web Clips",
      "priority": 10,
      "conditions": {
        "source": "web-clipper"
      },
      "destination": "3_Resources/Web-Clips",
      "enabled": true
    },
    {
      "id": "rule-005",
      "name": "TypeScript Content (Phase 4 - Content-based)",
      "priority": 5,
      "conditions": {
        "content_keywords": ["typescript", "type safety", "interface", "generic"],
        "any": true
      },
      "destination": "3_Resources/TypeScript",
      "enabled": true
    },
    {
      "id": "rule-006",
      "name": "Tutorial Articles (Phase 4 - Pattern-based)",
      "priority": 6,
      "conditions": {
        "content_patterns": ["step \\d+", "tutorial", "how to", "guide"],
        "any": true
      },
      "destination": "3_Resources/Tutorials",
      "enabled": true
    },
    {
      "id": "rule-007",
      "name": "API Documentation (Phase 4 - Multi-condition)",
      "priority": 4,
      "conditions": {
        "tags": ["api", "documentation"],
        "content_keywords": ["endpoint", "request", "response"],
        "any": true
      },
      "destination": "3_Resources/API-Docs",
      "enabled": true
    },
    {
      "id": "rule-default",
      "name": "Default - General Resources",
      "priority": 999,
      "conditions": {},
      "destination": "3_Resources/General",
      "enabled": true
    }
  ]
}
